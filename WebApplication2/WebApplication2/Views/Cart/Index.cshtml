@model List<WebApplication2.Models.CartItem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<style>
    .table-gio-hang{
        width:100%;
        margin:5px;
    }
</style>
@section jsFooter {
    <script src="/Client/js/controller/cartcontroller.js"></script>
}
<div>
    
    @if (Model.Count > 0)
    {
        <table class="table-gio-hang">
            <thead>
                <tr>
                    <td>Mã SP</td>
                    <td>Tên SP</td>
                    <td>Ảnh SP</td>
                    <td>Số lượng</td>
                    <td>Đơn giá</td>
                    <td>Thành tiền</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Product.Id</td>
                        <td>@item.Product.Name</td>
                        <td><img src="@item.Product.Images" width="100" /></td>
                        <td><input type="text" class="txtQuantity" data-id="@item.Product.Id" value="@item.Quantity" /></td>
                        <td>@item.Product.Price.GetValueOrDefault(0)</td>
                        <td>@(item.Product.Price.GetValueOrDefault(0) * item.Quantity)</td>
                        <td><a href="#" data-id="@item.Product.Id" class="btn-delete">Xoá</a></td>
                    </tr>
                }
            </tbody>
        </table>

        <button id="btnContinue" class="btn">Tiếp tục mua hàng</button>
        <button id="btnUpdate" class="btn">Cập nhật giỏ hàng</button>
        <button id="btnDeleteAll" class="btn">Xoá giỏ hàng</button>
        <button id="btnPayment" class="btn">Thanh toán</button>
    }
    else
    {
        <span>Chưa có sản phẩm nào trong giỏ hàng</span>
    }
</div>

