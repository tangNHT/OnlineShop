@model IEnumerable<WebApplication2.Models.Category>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<!-- DataTales Example -->
<div class="card shadow mb-4">
	<div class="card-header py-3">
		<h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<a class="btn btn-primary" href="@Url.Action("Create", "Category")">Tạo mới danh mục</a>
			<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
				<thead>
					<tr>
						<th>ID</th>
						<th>Name</th>
						<th>Created Date</th>
						<th>Order</th>
						<th>Status</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.Id</td>
							<td>@item.Name</td>
							<td>@(item.CreateDate.HasValue ? item.CreateDate.Value.ToString("dd/MM/yyyy") : "")</td>
							<td>@item.Order.GetValueOrDefault(0)</td>
							<td>@(item.Status.GetValueOrDefault(false)? "Active":"Blocked")</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
